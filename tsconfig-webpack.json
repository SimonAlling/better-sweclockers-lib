{
    "compilerOptions": {
        "lib": [
            "es2018",
            "dom"
        ],
        "sourceMap": true,
        "target": "es5",
        "declaration": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "preserveConstEnums": true
    }
}
